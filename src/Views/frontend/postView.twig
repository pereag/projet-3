{% extends 'template.twig' %}

{% block title %}
	Jean Forteroche | Pourquoi fait il si froid
{% endblock %}

{% block content %}
	<div class="container">
		<section>
			<div class="post">
				<h1>{{ post.title }}</h1>
				<img src="public/picture/alaska_banner.jpg" class="alaska_banner">
				<div class="article_post">
					<p>{{ post.content|raw }}</p>

					<ul class="list-unstyled col-lg-offset-10">
						<li>Jean Forteroche</li>
						<li>{{ post.datePost }}</li>
					</ul>
				</div>
			</div>
			<br>
			<div class="comments">
				<h2>Commentaires</h2>
				<hr>
				{% for comment in comments %}
					<div class="comment">
						<div class="row">
							<h4 class="col-lg-10">{{ comment.pseudo }}<br>Le {{ comment.dateComment }} :</h4>
						</div>
						<div class="row">
							<p class="col-lg-10 col-sm-10 col-xs-8 ">{{ comment.content }}</p>
							<div class="col-lg-2">
								<div class="button_report">
									<a href="index.php?action=reportComment&amp;id={{ comment.id }}&amp;postid={{ comment.idPost }}" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> signaler</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<form action="index.php?action=addCommentView&amp;id={{ post.id }}" method="post" class="add_comment">
				<div class="row">
					<div class="col-lg-12">
						<br>
					<div class="form">
						<h2>Ajouter un commentaire</h2>
						<hr>
						<div class="form-group">
							<div class="row">
					      		<div class="col-lg-3">
						      		<label for="pseudo">pseudo: </label>
						     		<input id="pseudo" type="text" name="pseudo" class="form-control";>
						     	</div>
						     </div>
						     <div class="row">
						     	<div class="col-lg-12">
						     		<label for="content">message: </label>
						     		<textarea id="content" type="text" name="content" rows="3" class="form-control";></textarea>
						     	</div>
						     </div>
				   		</div>
				   			<button  class="btn btn-default" type="submit">Envoyer</button>
						</div>
					</div>
				</div>	
			</form>
		</section>
	</div>
{% endblock %}