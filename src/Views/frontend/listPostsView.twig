{% extends 'template.twig' %}

{% block title %}
	Jean Forteroche | Page d'acceuil
{% endblock %}

	
{% block content %}
	<div class="container">
		<section>
			<div class="row">
				<h1 class="col-lg-12">Blog personnel dédié à mon nouveau livre</h1>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<img src="public/picture/alaska_banner.jpg" class="alaska_banner">
				</div>
			</div>
			<div class="article_list">
				<div class="row">
					<div class="col-lg-12">
						<h2>Billet simple pour l'Alaska</h2>
						<hr>
					</div>
				</div>
				{% for post in posts %}
					<div class="article">
						<a href="index.php?action=postView&amp;id={{ post.id }}">
							<div class="row">
								<h3 class="col-lg-12">{{ post.title }}</h3>
							</div>
							<div class="row">
								<div class="col-lg-9">{{ post.content|raw }}...</div>
								<ul class="list-unstyled col-lg-2">
									<li>{{ post.datePost }}</li>
									<li>Jean Forteroche</li>
								</ul>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}